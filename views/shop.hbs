<div class="row">
  <section class="main col-md-9">
    {{#if data.item}}
      <div class="row">
        <div class="col-12">
          <h2>{{data.item.title}}</h2>
        </div>

        <div class="col-12">
          <br />
          <br />
          <div class="row">
            <div class="col-12">
              <p>{{data.item.body}}</p>

              <br /><br />
              <strong>Price:</strong>
              ${{data.item.price}}<br />
              <strong>Category:</strong>
              {{data.item.category}}<br />
              <strong>Last Updated:</strong>
              {{data.item.updatedAt}}
            </div>
          </div>
        </div>
      </div>
    {{else}}
      <div class="row">
        <div class="col-12 text-center">
          <h2>{{data.message}}</h2>
          <p>Please try another item or category.</p>
        </div>
      </div>
    {{/if}}
  </section>

  <aside class="col-md-3">
    <br /><br />
    <h4>Items</h4>
    <ul class="list-group">
      {{#if data.items}}
        {{#each data.items}}
          <li class="list-group-item">
            <a href="/shop/{{this.id}}?category={{../viewingCategory}}">
              {{this.title}}
            </a>
          </li>
        {{/each}}
      {{else}}
        <li class="list-group-item">No items available</li>
      {{/if}}
    </ul>

    <h4>Categories</h4>
    <ul class="list-group">
      {{#if data.categories}}
        {{#each data.categories}}
          <li class="list-group-item">
            <a href="/shop?category={{this.id}}">
              {{this.category}}
            </a>
          </li>
        {{/each}}
      {{else}}
        <li class="list-group-item">No categories available</li>
      {{/if}}
    </ul>
  </aside>
</div>
